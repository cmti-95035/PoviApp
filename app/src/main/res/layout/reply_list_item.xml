<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp">

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="X"
        android:id="@+id/firstLetter"
        android:textColor="@color/white"
        android:background="@drawable/initial_item"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Author"
        android:id="@+id/author"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/firstLetter"
        android:layout_toEndOf="@+id/firstLetter"
        android:textColor="@color/amber_dark"
        android:ellipsize="end"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="date"
        android:id="@+id/date"
        android:layout_weight="1"
        android:textColor="@color/grey_dark"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/author"
        android:layout_toEndOf="@+id/author"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reply"
        android:id="@+id/reply"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_below="@+id/author"
        android:layout_alignLeft="@+id/author"
        android:layout_alignStart="@+id/author"
        android:layout_alignRight="@+id/date"
        android:layout_alignEnd="@+id/date"
        android:maxLines="2"
        android:ellipsize="end" />

</RelativeLayout>