<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@color/povi_primary"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-6dp"
        android:id="@+id/cardToolbar">
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab"
            android:background="@color/povi_primary"
            android:fillViewport="false"
            app:tabMode="scrollable"
            android:layout_gravity="center_horizontal|top"
            style="@style/PoviTabLayout" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/red_accent"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/authorimage"
                android:src="@drawable/daphna_headshot_circle_2"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/category_title"
                android:text="Development Category"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_marginLeft="2dp"
                android:layout_alignTop="@+id/authorimage"
                android:textSize="32dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/byauthor"
                android:inputType="textShortMessage"
                android:textColor="@color/white"
                android:text="By Author"
                android:layout_below="@+id/category_title"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_marginLeft="2dp"
                android:layout_alignBottom="@+id/authorimage"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/storytitle"
                android:textColor="@color/white"
                android:inputType="textMultiLine|textUri"
                android:text="Title of the story here"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_below="@+id/category_title"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_toEndOf="@+id/authorimage"
                android:textSize="28dp"

                android:layout_marginTop="32dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/storybody"
                android:text="Full Story Body Here"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textSize="28dp"
                android:layout_marginBottom="40dp"
                />
            <ImageView
                android:layout_marginLeft="40dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/poviicon"
                android:src="@drawable/povi_icon_whatdidpovisay"
                android:layout_below="@+id/storybody"
                android:scaleType="fitXY"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/poviresponse"
                android:text="This is where the povi's response will be"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:layout_toRightOf="@+id/poviicon"
                android:layout_marginLeft="4dp"
                android:layout_alignTop="@+id/poviicon"
                android:textStyle="italic"
                android:layout_marginTop="8dp"
                android:textSize="24dp"
                android:layout_marginRight="40dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>