<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@color/povi_primary"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-6dp"
        android:id="@+id/cardToolbar">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/red_accent"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/authorimage"
                android:src="@drawable/daphna_headshot_circle_2"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/category_title"
                android:text="Development Category"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_marginLeft="2dp"
                android:layout_alignTop="@+id/authorimage"
                android:textSize="32dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/byauthor"
                android:inputType="textShortMessage"
                android:textColor="@color/white"
                android:text="By Author"
                android:layout_below="@+id/category_title"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_alignBottom="@+id/authorimage"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/storytitle"
                android:textColor="@color/white"
                android:inputType="textMultiLine|textUri"
                android:text="Title of the story here"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_below="@+id/category_title"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_toEndOf="@+id/authorimage"
                android:textSize="28dp"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/storyexcerpt"
                android:textColor="@color/white"
                android:inputType="textMultiLine|textUri"
                android:text="Title of the story here"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_below="@+id/storytitle"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_toEndOf="@+id/authorimage"
                android:textSize="28dp"
                android:layout_marginTop="32dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textColor="@color/white"
                android:text="Read More"
                android:id="@+id/readmore"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:gravity="right"
                android:layout_below="@+id/storyexcerpt"
                android:layout_toRightOf="@+id/authorimage"
                android:layout_toEndOf="@+id/authorimage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/followup"
                android:text="Follow Up"
                android:textColor="@color/grey_dark"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="textCapWords"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                />
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/followup1"
                android:src="@drawable/storytelling_icon1"
                android:layout_below="@+id/followup"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/followup1Question"
                android:text="How does it feel to be left out of a game?"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textStyle="italic"
                android:layout_alignTop="@+id/followup1"
                android:layout_toRightOf="@+id/followup1"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/followup1" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/followup2"
                android:src="@drawable/storytelling_icon2"
                android:layout_below="@+id/followup1"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/followup2Question"
                android:text="Is it hard to be asked to be included? Why?"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textStyle="italic"
                android:layout_marginRight="16dp"
                android:layout_alignTop="@+id/followup2"
                android:layout_toRightOf="@+id/followup2"
                android:layout_toEndOf="@+id/followup2" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/followup3"
                android:src="@drawable/storytelling_icon3"
                android:layout_below="@+id/followup2"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/followup3Question"
                android:text="What does it mean to be disappointed?"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:layout_marginRight="16dp"
                android:textStyle="italic"
                android:layout_alignTop="@+id/followup3"
                android:layout_toRightOf="@+id/followup3"
                android:layout_toEndOf="@+id/followup3"
                android:layout_marginBottom="30dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="-6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/recordResponse"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey_dark"
                android:text="Record A Response" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/timerText"
                android:layout_below="@+id/recordResponse"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="0:00 / 1:00" />

            <android.support.design.widget.FloatingActionButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recordButton"
                android:src="@drawable/ic_mic_white_36dp"
                android:adjustViewBounds="true"
                app:borderWidth="0dp"
                android:visibility="visible"
                android:cropToPadding="false"
                app:fabSize="normal"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/cyan"
                android:scaleType="center" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>