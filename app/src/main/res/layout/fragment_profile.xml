<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.antwish.povi.familyconnect.ProfileFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileHeader"
        android:background="@color/amber"
        android:src="@drawable/login_header"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/profileHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Basic information"
                android:id="@+id/profileBaseHeader"
                android:textColor="@color/povi_secondary_text"
                android:layout_marginLeft="16dp" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/field_email"
                android:id="@+id/include1"
                android:layout_below="@+id/profileHeader"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/field_password"
                android:id="@+id/include2"
                android:layout_below="@+id/include"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/field_retypepassword"
                android:id="@+id/include3"
                android:layout_below="@+id/include3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Additional information"
                android:id="@+id/extendedProfileHeader"
                android:textColor="@color/povi_secondary_text"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp" />

            <include
                layout="@layout/field_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/include7"
                android:layout_below="@+id/include2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/field_name"
                android:id="@+id/include4"
                android:layout_below="@+id/include2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/field_birthdate"
                android:id="@+id/include5"
                android:layout_below="@+id/include"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/field_gender"
                android:id="@+id/include6"
                android:layout_below="@+id/include2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
